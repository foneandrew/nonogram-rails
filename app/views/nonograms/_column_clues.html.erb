<% column_clues = @columns.map { |column| column.clue } %>
<% clue_length = max_clue_length(rows: @rows, columns: @columns) %>

<% clue_length.times do |clue_number| %>
  <tr>
    <% clue_length.times do %>
      <%= content_tag(:th, '', class: 'cell clue') %>
    <% end %>

    <% @game_presented.nonogram.size.times do |column_num| %>
      <% if column_clues[column_num].length == clue_length - clue_number %>
        <%= content_tag :th, column_clues[column_num].shift, class: 'cell column-clue' %>
      <% else %>
        <%= content_tag(:th, '', class: 'cell column-clue') %>
      <% end %>
    <% end %>
  </tr>
<% end %>